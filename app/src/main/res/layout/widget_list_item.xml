<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/abc_list_item_padding_horizontal_material"
        android:paddingRight="@dimen/abc_list_item_padding_horizontal_material">

        <ImageView
            android:id="@+id/widget_icon"
            android:layout_width="@dimen/widget_list_icon"
            android:layout_height="@dimen/widget_list_icon"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/abc_list_item_padding_horizontal_material"
            android:layout_marginRight="@dimen/abc_list_item_padding_horizontal_material"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, May 21"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/widget_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimaryDark"
                tools:text="@string/widget_title_list" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_high_temperature"
            android:layout_width="@dimen/widget_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/space_ups"
            android:layout_marginRight="@dimen/space_ups"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/widget_text_size"
            tools:text="10" />

        <TextView
            android:id="@+id/widget_low_temperature"
            android:layout_width="@dimen/widget_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/widget_text_size"
            tools:text="7" />

    </LinearLayout>
</FrameLayout>